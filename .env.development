# Development environment configuration
NODE_ENV=development

# Server configuration
HOST=0.0.0.0
PORT=3000

# Cluster configuration
# CLUSTER_WORKERS=2          # Number of workers (defaults to CPU count, max 32)
CLUSTER_RESTART_MAX=10       # Max restarts per window (default: 10)
CLUSTER_RESTART_WINDOW=60000 # Restart window in ms (default: 60000)
CLUSTER_SHUTDOWN_TIMEOUT=5000 # Shutdown timeout in ms (default: 5000)

# Security configuration
CORS_ALLOWED_ORIGINS=*                    # Comma-separated origins or "*" (use specific origins in production)
RATE_LIMIT_WINDOW_MS=900000               # Rate limit window: 15 minutes (default)
RATE_LIMIT_MAX_REQUESTS=100               # Max requests per window (default: 100)
MAX_BODY_SIZE=10mb                        # Request body size limit (default: 10mb)
MAX_URL_LENGTH=2048                       # URL length limit for params (default: 2048)
